{
    "name": "rahulalam31/larabot",
    "description": "A chatbot package for Laravel.",
    "type": "library",
    
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/support": "^10.0|^11.0",
        "nesbot/carbon": "^2.71|^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6.6",
        "orchestra/testbench": "^8.14|^9.0",
        "pestphp/pest": "^2.24",
        "spatie/pest-plugin-snapshots": "^2.1",
        "spatie/phpunit-snapshot-assertions": "^5.1.2",
        "spatie/temporary-directory": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "YourNamespace\\Chatbot\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourNamespace\\Chatbot\\ChatbotServiceProvider"
            ],
            "aliases": {
                "Chatbot": "YourNamespace\\Chatbot\\Facades\\Chatbot"
            }
        }
    }
}
